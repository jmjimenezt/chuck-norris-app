<%= form_with model: @search_result, url: '/send_results/' + @search_result.id.to_s, :method => :patch, :class => "row row-cols-lg-auto g-3 align-items-center" do |form| %>
    <div class="col-12">
    <%= form.text_field :email, class:"form-control" %>
    </div>

    <div class="col-12">
    <%= form.submit t('send_results_by_email'), class:"btn btn-success" %>
    </div>
<% end %>
