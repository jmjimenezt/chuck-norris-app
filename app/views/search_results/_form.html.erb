<%= form_with(model: search_result) do |form| %>
  <% if search_result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(search_result.errors.count, "error") %> prohibited this search_result from being saved:</h2>

      <ul>
        <% search_result.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-2">
    <%= form.text_field :keywords, placeholder: t('input_placeholder'), class:"form-control input-lg" %>
  </div>

  <div class="field mb-2">
    <%= form.select(:categories, raw( render "rawcategories" ),  {}, { :class => "form-select input-lg" } ) %>
  </div>

  <div class="float-end">
    <%= form.submit t('submit_search'), class:"btn btn-primary" %>
  </div>

  <div class="">
    <small>
